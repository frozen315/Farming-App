<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="horizontal"
    >

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

        android:id="@+id/circularRevealCardView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitCenter"

            app:srcCompat="@mipmap/ic_launcher_round" />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


    <TextView
        android:id="@+id/textView"
        android:layout_width="307dp"
        android:layout_height="28dp"
        android:layout_marginVertical="5dp"
        android:text="sirvibharatkumarpunaram18@gnu.ac.in"
        android:textSize="15sp"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/circularRevealCardView"
        app:layout_constraintTop_toBottomOf="@+id/circularRevealCardView" />

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:id="@+id/txt123"
        android:textColor="#fff"
        android:layout_width="173dp"
        android:layout_height="29dp"
        android:text="User Name"

        android:textSize="22sp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/circularRevealCardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView33"
        />

    <TextView

        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textColor="#fff"
        android:layout_weight="1"
        android:text="Ahmedabad"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView313"
        app:layout_constraintStart_toStartOf="@+id/txt123"
        app:layout_constraintTop_toBottomOf="@+id/txt123" />

    <TextView
        android:id="@+id/textView313"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:textColor="#fff"
        android:gravity="right"
        android:text="Posts Count"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/circularRevealCardView"
        app:layout_constraintStart_toStartOf="@+id/textView33" />

</androidx.constraintlayout.widget.ConstraintLayout>